<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/minimum_margin_between_elements"
    android:id="@+id/album_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/coverAlbum"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/minimum_margin_between_elements"
        android:layout_marginEnd="@dimen/minimum_margin_between_elements"
        android:contentDescription="@string/cover"
        app:civ_border_color="@color/white"
        app:civ_border_width="@dimen/minimum_border_circle" />

    <TextView
        android:id="@+id/nameAlbum"
        android:singleLine="true"
        android:layout_gravity="center"
        android:textSize="@dimen/size_title_text"
        android:text="@string/unknown"
        android:textAlignment="center"
        android:layout_width="151dp"
        android:layout_height="30dp"
        android:textColor="@color/colorAccent"
        android:textStyle="normal"
        />
</LinearLayout>